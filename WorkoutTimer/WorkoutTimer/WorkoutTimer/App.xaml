<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fiveMinutesPlank="clr-namespace:WorkoutTimer.Components.FiveMinutesPlank;assembly=WorkoutTimer"
             x:Class="WorkoutTimer.App">
    <Application.Resources>
        <ResourceDictionary>
            <fiveMinutesPlank:FiveMinutesPlankViewModel x:Key="FiveMinutesPlankVm"/>
            <Style TargetType="Label" x:Key="HeaderTitleLabel">
                <Setter Property="HorizontalTextAlignment" Value="Center"/>
                <Setter Property="VerticalTextAlignment" Value="Center"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="32"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="#f9f9f9"/>
            </Style>

            <Style TargetType="Button" x:Key="RoundButton">
                <Setter Property="BackgroundColor" Value="#428bca"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="HeightRequest" Value="30"/>
                <Setter Property="Margin" Value="10,30"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>